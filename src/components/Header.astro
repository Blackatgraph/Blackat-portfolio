---
import HeaderMenu from "./HeaderMenu";
import MaxWidthWrapper from "./MaxWidthWrapper.astro";
---

<header
  class="border-bg-foreground bg-bg fixed left-0 top-0 z-10 w-full border-b"
>
  <MaxWidthWrapper className="flex items-center justify-between py-6">
    <img src="/white-logo.svg" alt="Logo" class="w-28 md:w-40" />
    <nav class="hidden items-center gap-8 md:flex">
      <a href="/" class="hover:text-secondary transition">Home</a>
      <a href="/#about" class="hover:text-secondary transition">About me</a>
      <a href="/#contact" class="hover:text-secondary transition">Contact</a>
    </nav>
    <HeaderMenu client:visible />
  </MaxWidthWrapper>
</header>
